
public class PrimesTester 
{

	public static void main(String[] args) 
	{
		//instantiate a new class to enable access to all methods of the class
		PrimesTester cp = new PrimesTester();

		int primes[] = new int[25];

		int i = 0;
		int num = 2;

//		for(int num = 2; i < primes.length; num++)
		
		while(i <primes.length)
		{
			if (cp.isprime(num))
			{
				primes[i] = num;
				i++;
			}
			num++;
		}
		
		//print primes array
		for (i =0; i<primes.length; i++)
		{
			System.out.println(" " + primes[i]);
		}

	}


	public boolean isprime (int n)
	{
		//isprime checks whether the value is prime and returns true or false accordingly

		for (int i = 2; i <= Math.sqrt(n); i++)
		{
			if (n % i == 0)
				return false;	
		}		

		return true;
	}

}
